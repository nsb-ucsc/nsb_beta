    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NSB Daemon",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/nsb_daemon",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "lldb",
            // "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "presentation": {
                "order": 1
            },
            "preLaunchTask": "CMake: Build NSB Daemon"
        },
        {
            "name": "Debug Python Client",
            "type": "debugpy",
            "request": "launch",
            "program": "nsb.py",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "Run Daemon & App Client",
            "configurations": ["Debug Python Client", "Debug NSB Daemon"],
            "stopAll": true
        }
    ]
}